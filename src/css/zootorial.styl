.zootorial-dialog
  background: white
  border: 1px solid gray
  color: black
  left: 0
  max-width: 33%
  transition:
    left 0.25s ease-in,
    opacity 0.25s ease-in-out,
    top 0.25s ease-out
  top: 0
  z-index: 2

  &.hidden
    opacity: 0

.zootorial-blocker
  background: gray
  cursor: not-allowed
  opacity: 0.25
  transition: opacity 0.25s ease-in-out
  z-index: 1

  &.hidden
    opacity: 0

.zootorial-focuser
  background: gray
  opacity: 0.5
  transition: opacity 0.25s ease-in-out
  z-index: 1

  &.hidden
    opacity: 0
