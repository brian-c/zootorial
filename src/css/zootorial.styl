.zootorial-dialog
  background: white
  border: 1px solid black
  color: black
  display: none
  left: 0
  max-width: 33%
  top: 0
  transition: left 0.25s ease-in, opacity 0.25s ease-in-out, top 0.25s ease-out
  z-index: 2

  &.open
    display: block

.zootorial-blocker
  background: gray
  cursor: not-allowed
  opacity: 0.25
  transition: opacity 0.25s ease-in-out
  z-index: 1

  &.hidden
    opacity: 0

.zootorial-focuser
  background: gray
  opacity: 0.5
  transition: opacity 0.25s ease-in-out
  z-index: 1

  &.hidden
    opacity: 0
