.zootorial-underlay {
  height: 100%;
  left: 0;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 1;

  &.hidden,
  &.tutorial {
    display: none;
  }
}

.zootorial-dialog {
  background: #fff;
  color: #000;
  position: absolute;
  z-index: 2;

  &.hidden {
    display: none;
  }
}

.zootorial-blocker {
  position: absolute;
  z-index: 1050;
}

.zootorial-focuser {
  position: absolute;
  z-index: 1;
}
