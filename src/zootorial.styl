greenish = #390

@keyframes zootorial-throb
  0%
    background: greenish

  100%
    background: darken(greenish, 25%)

@keyframes zootorial-glow
  0%
    box-shadow: 0 0 1px 2px black inset

  100%
    box-shadow: 0 0 1px 2px white inset

