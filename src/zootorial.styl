  .zootorial-header
    color: #666
    font-size: 20px
    margin-bottom: -10px
    padding: 15px 25px 0 20px

  .zootorial-content
    padding: 15px 25px 15px 20px

  .zootorial-instruction
    background: greenish
    color: #fff
    font-weight: bold
    padding: 15px 25px 15px 20px
    text-shadow: 0 1px 1px #000

    &[data-zootorial-attention]
      animation: 0.25s zootorial-throb ease-in-out infinite alternate

    &[data-zootorial-attention="1"]
      animation: 0.5s zootorial-throb ease-in-out infinite alternate

    button
      background: transparent
      border: 0
      color: inherit
      cursor: pointer
      font-family: inherit
      font-size: 12px
      margin: 0 0 0 0.25em
      padding: 0
      text-shadow: inherit
      text-decoration: underline

      &[disabled]
        opacity: 0.5
        pointer-events: none

  .zootorial-footer
    background: greenish
    padding: 10px
    text-align: center

    button
      background: #fff
      border: 0
      border-radius: 3px
      box-shadow: 0 2px 3px rgba(#000, 0.67)
      color: inherit
      cursor: pointer
      font: inherit
      font-weight: bold
      padding: 3px 15px
      position: relative

      &:active
        box-shadow: 0 1px 2px rgba(#000, 0.5)
        top: 1px

