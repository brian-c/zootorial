html {
  font: 14px sans-serif;
}

.interesting {
  background: rgba(#000, 0.125);
  border: 1px solid rgba(#000, 0.25);
  display: inline-block;
  height: 100px;
  line-height: 100px;
  text-align: center;
  width: 150px;
}

.tutorial.dialog {
  border: 1px solid #000;
  -moz-transition: left 0.25s ease-in-out, top 0.25s ease-in-out 0.125s;
}

.tutorial-blocker {
  background: rgba(red, 0.125);
  cursor: not-allowed;
  opacity: 1;
  -moz-transition: opacity 0.25s ease-in-out;

  &.hidden {
    opacity: 0;
  }
}
